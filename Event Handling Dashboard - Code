<form version="1.1" theme="dark">
  <label>vk_student_performance</label>
  <fieldset submitButton="false">
    <input type="dropdown" token="gender" searchWhenChanged="true">
      <label>Gender</label>
      <choice value="*">All</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <fieldForLabel>gender</fieldForLabel>
      <fieldForValue>gender</fieldForValue>
      <search>
        <query>index=main source=StudentsPerformance.csv | stats count by gender</query>
        <earliest>0</earliest>
        <latest></latest>
      </search>
    </input>
    <input type="dropdown" token="score_by" searchWhenChanged="true">
      <label>Score By</label>
      <choice value="*">All</choice>
      <choice value="both_score_by">Both</choice>
      <choice value="gender_score_by">Gender</choice>
      <choice value="ethinicity_score_by">Ethinicity</choice>
      <default>*</default>
      <initialValue>*</initialValue>
      <change>
        <condition label="Gender">
          <set token="show_gender_score_panel"></set>
          <unset token="show_ethinicity_score_panel"></unset>
          <unset token="show_both_score_panel"></unset>
        </condition>
        <condition value="ethinicity_score_by">
          <set token="show_ethinicity_score_panel"></set>
          <unset token="show_gender_score_panel"></unset>
          <unset token="show_both_score_panel"></unset>
        </condition>
        <condition match="$value$==&quot;both_score_by&quot;">
          <set token="show_both_score_panel"></set>
          <unset token="show_ethinicity_score_panel"></unset>
          <unset token="show_gender_score_panel"></unset>
        </condition>
        <condition>
          <set token="show_gender_score_panel"></set>
          <set token="show_ethinicity_score_panel"></set>
          <set token="show_both_score_panel"></set>
        </condition>
      </change>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Male</title>
      <single>
        <search>
          <query>index=main source="StudentsPerformance.csv" | where gender="male"| stats count</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
          <sampleRatio>1</sampleRatio>
        </search>
        <option name="colorBy">value</option>
        <option name="colorMode">block</option>
