            <set token="search_string">index=main source="StudentsPerformance.csv" | stats avg("reading score") as avg_reading_score by gender</set>
          </condition>
          <condition value="writing">
            <set token="search_string">index=main source="StudentsPerformance.csv" | stats avg("writing score") as avg_writing_score by gender</set>
